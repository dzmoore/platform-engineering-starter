{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.13.7/.schema/devbox.schema.json",
  "packages": [
    "colima@latest",
    "docker@latest",
    "kind@latest",
    "kubectl@latest",
    "kubernetes-helm@latest",
    "just@latest",
    "kcl@latest",
    "kyverno-chainsaw@latest",
    "crossplane-cli@latest",
    "yq-go@latest",
    "google-cloud-sdk@latest"
  ],
  "shell": {
    "init_hook": [
      "alias k=\"$(which kubectl)\"",
      "if [ -n \"$BASH_VERSION\" ]; then export SHELL_NAME=bash; fi",
      "if [ -n \"$ZSH_VERSION\" ]; then export SHELL_NAME=zsh; fi",
      "eval $(kind completion $SHELL_NAME)",
      "eval $(kubectl completion $SHELL_NAME)",
      "eval $(helm completion $SHELL_NAME)",
      "if [ -n \"$BASH_VERSION\" ]; then complete -F __start_kubectl k; fi",
      "just --completions $SHELL_NAME > /tmp/just-completions.zsh && source /tmp/just-completions.zsh",
      "eval $(chainsaw completion $SHELL_NAME)",
      "if [ -n \"$ZSH_VERSION\" ]; then compdef __start_kubectl k; fi"
    ],
    "scripts": {
      "test": ["echo \"Error: no test specified\" && exit 1"]
    }
  }
}
